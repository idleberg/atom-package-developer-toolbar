{
  "name": "package-developer-toolbar",
  "main": "./lib/package-developer-toolbar",
  "version": "1.0.2",
  "description": "A toolbar aimed at developers of Atom packages and syntax themes",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint": "tslint --project ./",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "toolbar",
    "tool-bar",
    "package developer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-package-developer-toolbar"
  },
  "homepage": "https://atom.io/packages/package-developer-toolbar",
  "bugs": {
    "url": "https://github.com/idleberg/atom-package-developer-toolbar/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "consumedServices": {
    "tool-bar": {
      "versions": {
        "^0 || ^1": "consumeToolBar"
      }
    }
  },
  "package-deps": [
    "browse",
    "local-storage",
    "open-in-developer-mode",
    "open-package",
    "package-generator",
    "satisfy-dependencies",
    "tool-bar"
  ],
  "dependencies": {
    "atom-package-deps": "^5.1.0"
  },
  "devDependencies": {
    "@types/atom": "^1.36.1",
    "@types/node": "^12.6.2",
    "husky": "^3.0.0",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
